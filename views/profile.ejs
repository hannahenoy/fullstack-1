<!doctype html>
<html>
<head>
    <title>Wedding Playlist</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@300;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <div class="container">

    <header>
        <span> <%= user.local.email%> | </span>
        <a href="/" class="logout">Logout</a>
    </header>

    <div class="head">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 hide" style="display:none">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %> <br>
                        <strong>email</strong>: <%= user.local.email %> <br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="list">
          <h1 class="h1">Wedding Hits</h1><br>
          <section class="left">
          <ul class="movieList">
          <% for(var i=0; i<songs.length; i++) {%>
            <li class="message">
                <iframe width="250" height="200" class="album-covers" src="<%= songs[i].src %>"> </iframe><br>
                <span class="albumName"><%= songs[i].songTitle %> </span> <br>
                <span class="artist"><%= songs[i].artist %> </span>
                <span><%= songs[i].thumbUp %></span>
                <button class='save'>âž•</button><button class="love"><i class="fa fa-heart" aria-hidden="true"></i></button>

                <span class="link"style='display:none'><%= songs[i].src %> </span>
              </li>
          <% } %>
          </ul>
        </div>
        </section>
        <h1 id="savedTitle" class="h2"></h1>
        <div class="right">
          <ol class="savedMusic queue">
          <% for(var i=0; i<savedsongs.length; i++) {%>
            <li class="movieList">
              <div style="display:none"><%= savedsongs[i]._id %></div>

              <span class="savedAlbum"><%= savedsongs[i].songTitle %></span>
              <span class="savedArtist">by <%= savedsongs[i].artist%></span>
              <!-- <img class="savedCover" src="<%=savedsongs[i].moviePoster%>" alt=""> -->
              <button class="deleteSaved"><i class="fa fa-trash" aria-hidden="true"></i></button>
              <hr>
            </li>
          <% } %>
          </ol>
        </div>


<script src="main.js"></script>

</body>
</html>

